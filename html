    <h1>⚠ SYSTEM ERROR ⚠</h1>
    <p>Your system has crashed</p>
    <p>Please restart your computer</p>

    <script>
        function speakError() {
            let msg = new SpeechSynthesisUtterance(
                "System error. Your system has crashed."
            );
            msg.lang = "en-US";
            msg.rate = 0.9;
            window.speechSynthesis.speak(msg);
        }

        setTimeout(speakError, 1000);
    </script>

